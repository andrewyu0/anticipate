<html>
	<head>
		<title>Anticipate</title>
			<link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">		
			<link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
		  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.js"></script>
    	<script src="/javascripts/angularApp.js"></script>

		<body ng-app="anticipate">
		  <div class="row">
		    <div class="col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-2">
					<div class="page-header center">
						<h1>A N T I C I P A T E</h1>
						<p>Imaginative speculation meets social posting and voting</p>
					</div>		    	
		    		
		    	<ui-view></ui-view>

		    	<!-- home.html template -->

		    	<script type="text/ng-template" id="/home.html">
						<div class="post-container">
							<div ng-repeat="post in posts | orderBy: '-upvotes'" >
								<div class="post" >
									<span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(post)"></span>
									{{post.upvotes}}
									<span class="post__title"><a ng-show="post.link" href="{{post.link}}">{{post.title}}</a></span>
									<span class="post__title" ng-hide="post.link">{{post.title}}</span>
									<span><a href='#/posts/{{post._id}}'> {{post.comments.length}} Comments</a></span>							
								</div>
							</div>						
						</div>
						

						<div class="post-form">
							<form ng-submit="addPost()">
								<h3>Add a new post </h3>
								<div class="form-group">
									<input type="text" class="form-control" placeholder="Title" ng-model="title"></input>
								</div>
								<div class="form-group">
									<input type="text" class="form-control" placeholder="Link" ng-model="link"></input>
								</div>
								<button type="submit" class="btn btn-primary post-button"> P O S T </button>
							</form>			
						</div>

						
		    	</script>

		    	<!-- posts.html template -->

		    	<script type="text/ng-template" id="/posts.html">
				    <div class="page-header">
				      <h3>
				        <a ng-show="post.link" href="{{post.link}}">
				          {{post.title}}
				        </a>
				        <span ng-hide="post.link">
				          {{post.title}}
				        </span>
				      </h3>
				    </div>

				    <div ng-repeat="comment in post.comments | orderBy:'-upvotes'">
				      <span class="glyphicon glyphicon-thumbs-up"
				        ng-click="incrementUpvotes(comment)"></span>
				      {{comment.upvotes}} - by {{comment.author}}
				      <span style="font-size:20px; margin-left:10px;">
				        {{comment.body}}
				      </span>
				    </div>
				    <form ng-submit="addComment()"
				      style="margin-top:30px;">
				      <h3>Add a new comment</h3>

				      <div class="form-group">
				        <input type="text"
				        class="form-control"
				        placeholder="Comment"
				        ng-model="body"></input>
				      </div>
				      <button type="submit" class="btn btn-primary post-button">Post</button>
				    </form>		
						
						<h4>
							<a href="/#/home">HOME</a>
						</h4>
					</script>

		  	</div>
		  </div>
		</body>
	</head>
</html>